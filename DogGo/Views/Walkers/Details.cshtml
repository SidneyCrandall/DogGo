<!-- Razor controll of the deatails link or tab for a dog walker. lets the browser know its an HTML section. -->

@model DogGo.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <>
    <h4>Walker</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Neighborhood)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class="col-sm-10">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dt>

        <div class="clearfix"></div>

        <div class="row">
            <section class="col-8 container mt-5">

                <h1 class="text-left">Walks</h1>
                <div class="row">
                    @foreach (Walk walk in Model.Walks)
                    {
                        <div class="card m-4" style="width: 18rem;">
                            <div class="card-body">
                                <div>
                                    <label class="font-weight-bold">Date:</label>
                                    <span>@walk.Date</span>
                                </div>
                                <div>
                                    <label class="font-weight-bold">Notes:</label>
                                    <p>@walk.Duration</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>

        </div>
    </dl>
    </>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>